<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRedBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"

   >

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/bigGreenbox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#000"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:padding="30dp">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_gravity="center"
            android:layout_weight="14"
           />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="x"
            android:id="@+id/x"
            android:layout_weight="1"
            android:textAllCaps="false"
            style="@style/mystyle1"
             />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/theBigbluebox"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#000"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/orangebox1"
            android:orientation="vertical"
            android:background="#000">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="sin"
                android:id="@+id/sin"
                android:textAllCaps="false"
                style="@style/mystyle1"
                android:layout_margin="2dp"
                />
            <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="cos"
                android:id="@+id/cos"
                android:textAllCaps="false"
            android:layout_weight="1"
                style="@style/mystyle1"
                android:layout_margin="2dp"

                />
            <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="tan"
                android:textAllCaps="false"
            android:layout_weight="1"
                style="@style/mystyle1"
                android:layout_margin="2dp"
            />
            <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="π"
            android:layout_weight="1"
                style="@style/mystyle1"
                android:layout_margin="2dp"
            />
            <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="!"
            android:layout_weight="1"
                style="@style/mystyle1"
                android:layout_margin="2dp"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:id="@+id/orangebox2"
            android:orientation="vertical"
            android:background="#000">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="ln"
                android:textAllCaps="false"
                style="@style/mystyle1"
                android:layout_margin="2dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="log"
                android:textAllCaps="false"
                android:layout_weight="1"
                style="@style/mystyle1"
                android:layout_margin="2dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="e"
                android:textAllCaps="false"
                android:layout_weight="1"
                style="@style/mystyle1"
                android:layout_margin="2dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="^"
                android:layout_weight="1"
                style="@style/mystyle1"
                android:layout_margin="2dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="√"
                android:layout_weight="1"
                style="@style/mystyle1"
                android:layout_margin="2dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="21"
            android:id="@+id/blackbox"
            android:orientation="vertical"
            android:background="#000"
            android:layout_marginLeft="30dp">
            <LinearLayout
                android:id="@+id/greenbox1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:text="7"
                    android:layout_margin="2dp"
                    style="@style/mystyle3"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:layout_weight="1"
                    style="@style/mystyle3"
                    android:layout_margin="2dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    style="@style/mystyle3"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="÷"
                    android:layout_margin="2dp"
                    style="@style/mystyle2"
                    android:layout_weight="1"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="("
                    style="@style/mystyle2"
                    android:layout_margin="2dp"
                    android:layout_weight="1"

                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/greenbox2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#000">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="4"
                    style="@style/mystyle3"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    style="@style/mystyle3"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    style="@style/mystyle3"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="x"
                    style="@style/mystyle2"
                    android:textAllCaps="false"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=")"
                    style="@style/mystyle2"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/blue"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#000">
                <LinearLayout
                    android:id="@+id/rdbox"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="#000">
                    <LinearLayout
                        android:id="@+id/greenbox3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#000">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:text="1"
                            style="@style/mystyle3"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            style="@style/mystyle3"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="3"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            style="@style/mystyle3"
                            />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="-"
                            style="@style/mystyle2"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            />
                        </LinearLayout>
                    <LinearLayout
                        android:id="@+id/greenbox4"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#000">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="2"
                            android:text="0"
                            style="@style/mystyle3"
                            />
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="."
                            android:layout_weight="1"
                            style="@style/mystyle3"
                            android:layout_margin="2dp"
                            />
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="+"
                            android:layout_weight="1"
                            style="@style/mystyle2"
                            android:layout_margin="2dp"
                            />
                        </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="="
                    android:layout_margin="2dp"
                    style="@style/mystyle2"
                    android:layout_weight="1"
                    />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


</LinearLayout>
